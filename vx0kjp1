import random

def generate_random_list(length, min_value, max_value):
    random_list = [random.randint(min_value, max_value) for _ in range(length)]
    return random_list

def find_smallest_number(numbers):
    smallest_number = min(numbers)
    return smallest_number

# 生成一个长度为10的随机数列表
list_length = 10
min_value = 1
max_value = 100
random_list = generate_random_list(list_length, min_value, max_value)
print("随机数列表:", random_list)

# 找到列表中最小的数
smallest_number = find_smallest_number(random_list)
print("最小的数:", smallest_number)
